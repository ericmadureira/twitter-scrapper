<p id="notice"><%= notice %></p>

<h1>Profiles List</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name_or_user_or_description_cont %>
  <%= f.search_field :name_or_user_or_description_cont %>

  <%= f.submit %>
<% end %>
<br/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Profile url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.profile_url %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
